                                android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/ck_use"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="50dp"
                                    android:text="@string/use"
                                    android:textColor="@color/word_black"
                                    android:textSize="14sp" />

                                <CheckBox
                                    android:id="@+id/ck_nouse"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="20dp"
                                    android:checked="true"
                                    android:text="@string/unuse"
                                    android:textColor="@color/word_black"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/line_oilPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:minHeight="40dp"
                                android:visibility="gone"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:text="¥"
                                    android:textColor="@color/word_black"
                                    android:textSize="14sp" />

                                <EditText
                                    android:id="@+id/et_oilPrice"
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="20dp"
                                    android:background="@null"
                                    android:hint="0"
                                    android:numeric="decimal"
                                    android:textColor="@color/word_black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/oilwarn"
                                    android:textColor="@color/red"
                                    android:textSize="12dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <include layout="@layout/view_line_maginleft50" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:text="@string/bj"
                            android:textColor="@color/word_black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="¥"
                            android:textColor="@color/word_black"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/et_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:background="@null"
                            android:hint="@string/bjwarn"
                            android:numeric="decimal"
                            android:textColor="@color/word_black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <include layout="@layout/view_line_match" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/gray_ec" />
            </LinearLayout>
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/line_down"
            android:layout_alignParentBottom="true"
            android:background="@color/black_33" />

        <LinearLayout
            android:id="@+id/line_down"
            style="@style/rlt_align_bottom">

            <TextView
                style="@style/gravity_center_half_width"
                android:text="指定司机"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_submit"
                style="@style/gravity_center_half_width"
                android:background="@color/bg_Gray"
                android:text="发布"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>